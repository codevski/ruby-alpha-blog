<div class='text-center'>
  <div>
    <h1>Articles</h1>
  </div>
  <div><%= link_to 'Home', root_path %> | <%= link_to 'Articles', articles_path %> | <%= link_to 'About', about_path %></div>
  <div>
    <p><%= link_to "Create new article", new_article_path %></p>
    <table align="center">
      <tr align="left">
        <th>Title</th>
        <th>Description</th>
      </tr>
      <% @articles.each do |article| %>
        <tr align="left">
          <td><%= article.title %> </td>
          <td><%= article.description %> </td>
          <td><%= link_to "Edit", edit_article_path(article) %> </td>
          <td><%= link_to "Show", article_path(article) %> </td>
        </tr>
      <% end %>
    </table>
  </div>
  <footer style='font-size: 0.5em'>Â© 2019 Alpha Blog, Inc.</footer>
</div>