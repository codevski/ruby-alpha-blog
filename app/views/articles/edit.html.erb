<div class='text-center'>
  <div>
    <h1>Edit Article</h1>
  </div>
  <div><%= link_to 'Home', root_path %> | <%= link_to 'Articles', articles_path %> | <%= link_to 'About', about_path %></div>
  <div>
    <% if @article.errors.any? %>
      <h4>The following errors prevented the article frm getting created</h4>
      <p>
        <% @article.errors.full_messages.each do |msg| %>
          <span> <%= msg %> </span></br>
        <% end %>
      </p>
    <% end %>
    <%= form_for @article do |f| %>
      <p>
        <%= f.label :title %> </br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :description %> </br>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.submit %>
      </p>

    <% end %>
    <%= link_to "Back", articles_path %>
  </div>
  <footer style='font-size: 0.5em'>Â© 2019 Alpha Blog, Inc.</footer>
</div>