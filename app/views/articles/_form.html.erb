<% if @article.errors.any? %>
  <h4>The following errors prevented the article from getting created</h4>
  <p>
    <% @article.errors.full_messages.each do |msg| %>
      <span> <%= msg %> </span></br>
    <% end %>
  </p>
<% end %>
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> </br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>