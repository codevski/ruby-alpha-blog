<h1 align='center'>All Users</h1>
<% @users.each do |user| %>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 offset-sm-4'>
      <div class='card'>
        <h5 class='card-header text-center'><%= link_to user.username, user_path(user) %></h5>
          <div class='card-body text-center'>
            <%= link_to gravatar_for(user), user_path(user) %>
            <div><small><%= pluralize(user.articles.count, "article") if user.articles %></small></div>
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Delete", user_path(user), method: :delete,
                                                      data: { confirm: "Are you sure you want to delete user?" },
                                                      class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class='container'>
  <%= will_paginate @clients, list_classes: %w(pagination justify-content-center) %>
</div>